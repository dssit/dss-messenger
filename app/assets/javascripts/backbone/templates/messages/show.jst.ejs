<tr id="collapse<%= id %>" class="accordion-body collapse">
  <td colspan='6'>
    <div class="message-box well">
      <div class="message-body">
        <table class="table table-striped table-bordered table-condensed">
          <tbody>
            <tr>
              <td><b>Recipients</b></td>
              <td>
                <ul>
                <% _.each(recipients, function(recipient){ %>
                  <li><%= recipient.name %></li>
                <% }); %>
                </ul>
              </td>
            </tr>
          <% _.each(recipient_counts, function(recipient_count) { %>
            <tr>
              <td><b>Recipient Count (<%= recipient_count.publisher %>)</b></td>
              <td>
                <%= recipient_count.count %> <% if(recipient_count.viewed) { %> (viewed <%= recipient_count.viewed %> times)<% } %>
              </td>
            </tr>
          <% }); %>
          <% _.each(statuses, function(status) { %>
            <tr>
              <td><b>Status (<%= status.publisher %>)</b></td>
              <td>
                <%= status.status %>
              </td>
            </tr>
          <% }); %>
            <% if (classification) { %>
            <tr>
              <td><b>Classification</b></td>
              <td>
                <%= classification.description %></td>
              </td>
            </tr>
            <% } %>
            <% if (modifier) { %>
            <tr>
              <td><b>Modifier</b></td>
              <td>
                <%= modifier.description %></td>
              </td>
            </tr>
            <% } %>
            <tr>
              <td><b>Impact statement</b></td>
              <td><%= impact_statement %></td>
            </tr>
            <% if (window_start) { %>
            <tr>
              <td><b>Window start</b></td>
              <td><%= window_start %></td>
            </tr>
            <% } %>
            <% if (window_end) { %>
            <tr>
              <td><b>Window end</b></td>
              <td><%= window_end %></td>
            </tr>
            <% } %>
            <% if (purpose) { %>
            <tr>
              <td><b>Purpose</b></td>
              <td><%= purpose %></td>
            </tr>
            <% } %>
            <% if (resolution) { %>
            <tr>
              <td><b>Resolution</b></td>
              <td><%= resolution %></td>
            </tr>
            <% } %>
            <% if (workaround) { %>
            <tr>
              <td><b>Workaround</b></td>
              <td><%= workaround %></td>
            </tr>
            <% } %>
            <% if (other_services) { %>
            <tr>
              <td><b>Other services</b></td>
              <td><%= other_services %></td>
            </tr>
            <% } %>
            <% if (impacted_services.length) { %>
            <tr>
              <td><b>Impacted Services</b></td>
              <td>
                <ul>
                <% _.each(impacted_services, function(impacted_service){ %>
                  <li><%= impacted_service.name %></li>
                <% }); %>
                </ul>
              </td>
            </tr>
            <% } %>
            <tr>
              <td><b>Created</b></td>
              <td><%= created_at %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </td>
</tr>
