<% content_for :breadcrumb do %>
  <li>Preferences</li>
  <li class="active">E-Mail Footer</li>
<% end %>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover">
      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <%= form_for [:preferences, setting] do |f| %>
              <td>
                <%= f.text_area :item_value, class: "typeahead form-control", rows: 7 %><br />
                <%= f.submit "Save", class: "btn btn-primary" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div> <!-- .col-md-12 -->
</div> <!-- .row -->
