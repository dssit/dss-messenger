<% content_for :breadcrumb do %>
  <li>Preferences</li>
  <li class="active">Publishers</li>
<% end %>

<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover">
      <tbody>
        <% @publishers.each do |publisher| %>
          <tr>
            <%= form_for [:preferences, publisher] do |f| %>
              <td>
                <%= f.text_field :name, class: "typeahead form-control" %>
              </td>
              <td width="8%">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :default %>
                    Default
                  </label>
                </div>
              </td>
              <td width="20%"><%= f.submit "Update", class: "btn btn-default", style: 'width: 90%' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div> <!-- .col-md-12 -->
</div> <!-- .row -->
