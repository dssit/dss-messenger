<div class="row">
  <div class="col-md-12">

    <table class="table table-striped table-hover">
      <tbody>
        <% @impacted_services.each do |impacted_service| %>
          <tr>
            <%= form_for [:preferences, impacted_service] do |f| %>
              <td>
                <%= f.text_field :name, class: "typeahead form-control" %>
              </td>
              <td width="20%"><%= f.submit "Update", class: "btn btn-default", style: 'width: 45%' %> <%= link_to 'Remove', [:preferences, impacted_service], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: 'width: 45%' %></td>
            <% end %>
          </tr>
        <% end %>
        <tr>
          <%= form_for [:preferences, ImpactedService.new] do |f| %>
            <td>
              <%= f.text_field :name, class: "typeahead form-control" %>
            </td>
            <td><%= f.submit "Create", class: "btn btn-primary", style: 'width: 90%' %></td>
          <% end %>
        </tr>
      </tbody>
    </table>

  </div> <!-- .col-md-12 -->
</div> <!-- .row -->
